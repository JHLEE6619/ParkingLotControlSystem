<Page x:Class="Client3.View.PrePayment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client3.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="450"
      Title="PrePayment">

    <Grid Background="White">
        <Grid Margin="40,100,40,50" Background="#FFCACACA">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="[차량 번호]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBox Grid.Row="1" Width="200" Height="30" FontSize="18" HorizontalAlignment="Left"
                     VerticalAlignment="Center" Margin="20,0,0,0"/>
            <Button Grid.Column="1" Grid.Row="1" Content="입력" FontSize="18"
                    HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="30" Margin="20,0,0,0" />
            <TextBlock Grid.Row="2" Text="[입차 일시]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBlock Grid.Row="3" TextWrapping="Wrap" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBlock Grid.Row="4" Text="[출차 일시]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBlock Grid.Row="5" TextWrapping="Wrap" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBlock Grid.Row="6" Text="[주차 시간]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBlock Grid.Row="7" TextWrapping="Wrap" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBlock Grid.Row="8" TextWrapping="Wrap" FontSize="18" FontWeight="bold" HorizontalAlignment="Right"
                    VerticalAlignment="Center" Margin="0,0,20,0" />
            <Button Visibility="Hidden" Grid.Column="1" Grid.Row="8" Content="결제하기" FontSize="18"
                    HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="30" Margin="20,0,0,0" />

        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="30,30,0,0" TextWrapping="Wrap" Text="요금 사전 정산" VerticalAlignment="Top"
           FontSize="24" FontWeight="Bold"/>
    </Grid>
</Page>
