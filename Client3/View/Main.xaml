<Page x:Class="Client3.View.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client3.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="450"
      Title="Main">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="30,30,0,0" TextWrapping="Wrap" Text="행복주차장" VerticalAlignment="Top"
                   FontSize="24" FontWeight="Bold"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="요금 사전 정산" FontSize="20" FontWeight="Bold"
                Width="300" Height="60"/>
        <Button Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="정기 차량 등록" FontSize="20" FontWeight="Bold"
                Width="300" Height="60"/>
        <Button Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Content="정기 차량 기간 연장" FontSize="20" FontWeight="Bold"
                Width="300" Height="60"/>
    </Grid>
</Page>
