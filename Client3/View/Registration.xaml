<Page x:Class="Client3.View.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client3.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="450"
      Title="Registration">

    <Grid Background="White">
        <Grid Margin="40,100,40,50" Background="#FFCACACA">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="[차량 번호]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBox Grid.Row="1" Width="200" Height="30" FontSize="18" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBlock Grid.Row="2" Text="[비밀번호]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBox Grid.Row="3" Width="200" Height="30" FontSize="18" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBlock Grid.Row="4" Text="[비밀번호 확인]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBox Grid.Row="5" Width="200" Height="30" FontSize="18" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBlock Grid.Row="6" Text="[등록 기간]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0" />
            <ComboBox Grid.Row="7" Grid.ColumnSpan="2" Width="310" Height="30" FontSize="18" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Margin="20,0,0,0">
                <ComboBoxItem Content="1일 - 20,000원 " FontSize="18"></ComboBoxItem>
                <ComboBoxItem Content="1주일 - 50,000원 " FontSize="18"></ComboBoxItem>
                <ComboBoxItem Content="1개월(30일) - 120,000원" FontSize="18"></ComboBoxItem>
            </ComboBox>
            <TextBlock Grid.Row="8" FontSize="18" FontWeight="bold" HorizontalAlignment="Right"
                    VerticalAlignment="Center" Margin="0,0,20,0" TextWrapping="Wrap" />
            <Button Visibility="Hidden" Grid.Column="1" Grid.Row="8" Content="결제하기" FontSize="18"
                HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="30" Margin="20,0,0,0" />
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="30,30,0,0" TextWrapping="Wrap" Text="정기 차량 등록" VerticalAlignment="Top"
            FontSize="24" FontWeight="Bold"/>
    </Grid>
</Page>
