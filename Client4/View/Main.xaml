<Page x:Class="Client4.View.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client4.View"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="Main">

    <Grid Background="White">
        <TextBlock Margin="30" HorizontalAlignment="Left" VerticalAlignment="Top" Text="출구 정산" FontSize="24" FontWeight="Bold"></TextBlock>
        <Grid Background="#FFCACACA" Margin="30,80,30,80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Text="[차량 번호]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0" />
            <TextBlock Grid.Column="1" TextWrapping="Wrap" Height="30" FontSize="18" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock Grid.Row="1" Text="[차량 구분]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0" />
            <TextBlock Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Height="30" FontSize="18" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0"/>

            <TextBlock Grid.Row="2" Text="[입차 일시]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0" />
            <TextBlock Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0" />
            <TextBlock Grid.Row="3" Text="[출차 일시]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0" />
            <TextBlock Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0" />
            <TextBlock Grid.Row="4" Text="[주차 시간]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0" />
            <TextBlock Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBlock Grid.Row="5" Text="[주차 요금]" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0" />
            <TextBlock Grid.Row="5" Grid.Column="1" TextWrapping="Wrap" FontSize="18" FontWeight="bold" HorizontalAlignment="Left"
                VerticalAlignment="Center" Margin="10,0,0,0" />
        </Grid>
        <Button FontSize="18" FontWeight="Bold" Width="340" Height="40" Content="결제하기" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
